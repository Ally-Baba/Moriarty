<h2 align="center"> <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <h4 class="center"><strong></strong></h4>
 <%= simple_format(@article.description) %>
<% if @article.user == current_user %>
<%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-success" %> 
<%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "btn btn-xs btn-success" %>
<% end %>
<%= link_to 'Back to Guest Book', articles_path, class: "btn btn-xs btn-success" %>