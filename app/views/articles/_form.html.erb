<%= render 'shared/errors' %>
<div class="row">
 <div class="col-xs-12">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-3">
    <%= f.label :title %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-3">
    <%= f.label :description %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Content" %>
   </div>
  </div>
  <div class="form-group">
   <div align="center">
    <%= f.submit class: 'btn btn-success btn-large', value: "Update Post" %>
    <a class="btn btn-success",<%= link_to 'Back', articles_path %></a>
    <a class="btn btn-warning",<%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %></a>
   </div>
  </div>
<% end %>
 </div>
</div>