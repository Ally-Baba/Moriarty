<h1 align="center">Sign Up</h1>
<br>
<br>

<div class="row">
 <div class="col-xs-12">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-3">
    <%= f.label :username %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-3">
    <%= f.label :email %>
   </div>
   <div class="col-sm-6">
    <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-3">
    <%= f.label :password %>
   </div>
   <div class="col-sm-6">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
   </div>
  </div>  
  <div class="form-group">
   <div align="center">
      <%= f.submit(@user.new_record?  ? "Sign up" : "Update account", class: 'btn btn-success btn-large') %>
      <%= link_to 'Back', articles_path, class: "btn btn-success btn-large" %>
   </div>
  </div>
<% end %>
  
 </div>
</div>
